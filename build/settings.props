<Project>
  <PropertyGroup Label="Basic Settings">
    <IsPackable>true</IsPackable>
    <VersionPrefix>3.0.1-preview1</VersionPrefix>
    <LangVersion>latest</LangVersion>
    <Nullable>disable</Nullable>
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <SuppressNETCoreSdkPreviewMessage>true</SuppressNETCoreSdkPreviewMessage>
    <NoWarn>$(NoWarn);CS1591;IDE1006</NoWarn>
  </PropertyGroup>

  <PropertyGroup Label="Ownership Settings">
    <Company>King David Consulting LLC</Company>
    <Authors>kdcllc</Authors>
    <Copyright>King David Consulting LLC</Copyright>
  </PropertyGroup>

  <PropertyGroup Label="Nuget Package Settings">
		<Description>Event Bus for Salesforce Platform events.</Description>
		<PackageProjectUrl>https://github.com/kdcllc/Bet.BuildingBlocks.SalesforceEventBus</PackageProjectUrl>
	  <RepositoryUrl>https://github.com/kdcllc/CometD.NetCore.Salesforce.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageLicense>https://github.com/kdcllc/Bet.BuildingBlocks.SalesforceEventBus/blob/master/LICENSE</PackageLicense>
		<RepositoryUrl>https://github.com/kdcllc/Bet.BuildingBlocks.SalesforceEventBus.git</RepositoryUrl>
    <!-- https://docs.microsoft.com/en-us/nuget/reference/errors-and-warnings/nu5048 -->
    <PackageIcon>icon.png</PackageIcon>
    <PackageTags>aspnetcore,dottet,salesforce, cometd, bayeux,salesforce, cometd, bayeux, event, platform event, building blocks</PackageTags>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <PropertyGroup Label="SourceLink Settings">
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>

    <!-- https://github.com/kdcllc/Bet.AspNetCore/issues/103 -->
    <DebugType>Embedded</DebugType>
    <EmbedAllSources>True</EmbedAllSources>
  </PropertyGroup>
</Project>
